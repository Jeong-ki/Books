<!DOCTYPE html>
<html>
  <head>
    <%- include('../partials/head') %>
  </head>
  <body>
    <%- include('../partials/nav') %>

    <div class="container mb-3">

      <h2 class="mb-3">Í≤åÏãúÌåê</h2>

      <table class="board-table table table-sm border-bottom">

        <thead class="thead-light">
          <tr>
            <th scope="col" class="numId">Î≤àÌò∏</th>
            <th scope="col" class="cate">Î∂ÑÎ•ò</th>
            <th scope="col">Ï†úÎ™©</th>
            <th scope="col" class="author">Í∏ÄÏì¥Ïù¥</th>
            <th scope="col" class="views">Ï°∞Ìöå</th>
            <th scope="col" class="date">ÏûëÏÑ±Ïùº</th>
          </tr>
        </thead>

        <tbody>
          <% if(posts == null || posts.length == 0){ %>
            <tr>
              <td colspan=5 align="center"> ÏûëÏÑ±Îêú Í≤åÏãúÍ∏ÄÏù¥ ÏóÜÏäµÎãàÎã§. </td>
            </tr>
          <% } %>
          <% posts.forEach(function(post) { %>
            <tr>
              <td class="numId"><%= post.num %></td>
              <td class="cate">
                <span><%= post.category %></span>
              </td>
              <td>
                <a href="/posts/<%= post.id %><%= getPostQueryString() %>" class="title-container">
                  <div data-search-highlight="title" class="title-ellipsis ellipsis float-left">
                    <span class="title-text"><%= post.title %></span>
                  <% if(post.commentCount){ %>
                    <small class="title-comments d-inline-block pl-2">[<%= post.commentCount %>]</small>
                  <% } %>
                  <% if(post.haveFile){ %>
                    <small class="title-attachment d-inline-block pl-2">üìÅ</small>
                  <% } %>
                  </div>
               </a>
              </td>
              <td class="author">
                <a href="/posts<%= getPostQueryString(false, { searchType:'author!', searchText:post.author }) %>">
                <div data-search-highlight="author" class="ellipsis"><%= post.author %></div></a>
              </td>
              <td class="views"><%= post.views %></td>
              <td class="date">
                <span data-date="<%= post.createdAt %>"></span>
              </td>
            </tr>
          <% }) %>
        </tbody>

      </table>
      
      <div class="row mb-3">

        <div class="col-2">
          <% if(locals.islogined){ %> 
            <div>
              <a class="btn btn-primary" href="/posts/create<%= getPostQueryString() %>">Í∏ÄÏì∞Í∏∞</a>
            </div>
          <% } else { %>
            <div>
              <a class="btn btn-primary" href="/posts" onclick="confirm('Î°úÍ∑∏Ïù∏ ÌõÑ ÏûëÏÑ±Í∞ÄÎä•Ìï©ÎãàÎã§.')">Í∏ÄÏì∞Í∏∞</a>
            </div>
          <% } %>
        </div>

        <nav class="col-8">
          <%
            var offset = 2;
            var previousBtnEnabled = currentPage>1;
            var nextBtnEnabled = currentPage<maxPage;
          %>
          <ul class="pagination pagination-sm justify-content-center align-items-center h-100 mb-0">            
            <li class="page-item <%= previousBtnEnabled?'':'disabled' %>">
              <a class="page-link" href="/posts<%= getPostQueryString(false, {page:currentPage-1}) %>" <%= previousBtnEnabled?'':'tabindex=-1' %>>¬´</a>
            </li>
            <% for(i=1;i<=maxPage;i++){ %>
              <% if(i==1 || i==maxPage || (i>=currentPage-offset && i<=currentPage+offset)){ %>
                <li class="page-item <%= currentPage==i?'active':'' %>">
                  <a class="page-link" href="/posts<%= getPostQueryString(false, {page:i}) %>"> <%= i %> </a>
                </li>
              <% } else if(i==2 || i==maxPage-1){ %>
                <li><a class="page-link">...</a></li>
              <% } %>
            <% } %>
            <li class="page-item <%= nextBtnEnabled?'':'disabled' %>">
              <a class="page-link" href="/posts<%= getPostQueryString(false, {page:currentPage+1}) %>" <%= nextBtnEnabled?'':'tabindex=-1' %>>¬ª</a>
            </li>
          </ul>
        </nav>

      </div>
      <form action="/posts" method="get" class="post-index-tool">
        <div class="form-row">

          <div class="form-group col-3">
            <label>Î≥¥Í∏∞</label>
            <select name="limit" class="custom-select" onchange="this.parentElement.parentElement.parentElement.submit()">
              <option value="5" <%= limit==5?'selected':'' %>>5 Í∞ú</option>
              <option value="10" <%= limit==10?'selected':'' %>>10 Í∞ú</option>
              <option value="20" <%= limit==20?'selected':'' %>>20 Í∞ú</option>
            </select>
          </div>

          <div class="form-group col-9">
            <label>Í≤ÄÏÉâ</label>
            <div class="input-group">
              <select name="searchType" class="custom-select">
                <option value="title,body" <%= searchType=='title,body'?'selected':'' %>>Ï†úÎ™©+ÎÇ¥Ïö©</option>
                <option value="title" <%= searchType=='title'?'selected':'' %>>Ï†úÎ™©</option>
                <option value="body" <%= searchType=='body'?'selected':'' %>>ÎÇ¥Ïö©</option>
                <option value="author" <%= searchType=='author'?'selected':'' %>>Í∏ÄÏì¥Ïù¥</option>
              </select>
              <input minLength="2" type="text" name="searchText" value="<%= searchText %>">
              <div class="input-group-append">
                <button class="btn btn-outline-primary" type="submit">search</button>
              </div>
            </div>
          </div>

        </div>
      </form>
      
    </div>
  </body>
</html>