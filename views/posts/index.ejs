<!DOCTYPE html>
<html>
  <head>
    <%- include('../partials/head') %>
  </head>
  <body>
    <%- include('../partials/nav') %>

    <div class="container mb-3">

      <h2 class="mb-3">게시판</h2>

      <table class="board-table table table-sm border-bottom">

        <thead class="thead-light">
          <tr>
            <th scope="col" class="cate">분류</th>
            <th scope="col">제목</th>
            <th scope="col" class="author">글쓴이</th>
            <th scope="col" class="date">작성일</th>
          </tr>
        </thead>

        <tbody>
          <% if(posts == null || posts.length == 0){ %>
            <tr>
              <td colspan=2> There is no data to show :( </td>
            </tr>
          <% } %>
          <% posts.forEach(function(post) { %>
            <tr>
              <td class="cate">
                <span><%= post.category %></span>
              </td>
              <td>
                <a href="/posts/<%= post.id %>"><div class="ellipsis"><%= post.title %></div></a>
              </td>
              <td class="author">
                <div class="ellipsis"><%= post.author %></div>
              </td>
              <td class="date">
                <span data-date="<%= post.createdAt %>"></span>
              </td>
            </tr>
          <% }) %>
        </tbody>

      </table>
      <% if(locals.islogined){ %> 
        <div>
          <a class="btn btn-primary" href="/posts/create">글쓰기</a>
        </div>
      <% } else { %>
        <div>
          <a class="btn btn-primary" href="/posts" onclick="confirm('로그인 후 작성가능합니다.')">글쓰기</a>
        </div>
      <% } %>
    </div>
  </body>
</html>